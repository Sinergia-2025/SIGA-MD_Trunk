Imports System.Text
Imports Microsoft.VisualStudio.TestTools.UnitTesting
Imports Eniac.Entidades.Extensiones
<TestClass()> Public Class StringExtensionsTest

   <TestMethod()> Public Sub DividirStringEn3LineasDe100Exactas()
      Dim valorADividir = ""

      Dim dvicion = valorADividir.DivideEnPartes(100)

      Assert.AreEqual(dvicion.Count, 3)
   End Sub

   <TestMethod()> Public Sub DividirStringEn3LineasDe100UnoCorto()
      Dim valorADividir = "1234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345"

      Dim dvicion = valorADividir.DivideEnPartes(100)

      Assert.AreEqual(dvicion.Count, 3)
   End Sub

   <TestMethod()> Public Sub DividirStringEn3LineasDe100ConOrigenDe200()
      Dim valorADividir = "12345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890"

      Dim dvicion = valorADividir.DivideEnPartes(100)

      Assert.AreNotEqual(dvicion.Count, 3)
   End Sub

End Class
